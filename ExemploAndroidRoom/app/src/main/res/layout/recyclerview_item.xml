<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_tarefa_titulo"
        style="@style/tarefa_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:text="Titulo da Tarefa" />

    <TextView
        android:id="@+id/tv_tarefa_descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Descricao da Tarefa" />

    <TextView
        android:id="@+id/tv_tarefa_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Data Incluida" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tv_tarefa_prioridade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:text="Prioridade"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_tarefa_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:layout_marginTop="8dp"
            android:gravity="end"
            android:text="Status"
            android:textSize="18sp" />
    </RelativeLayout>


</LinearLayout>